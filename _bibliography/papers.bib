}
@article{Guler2012,
   abstract = {We consider methods to define the performance metrics for different plasmonic materials to be used in localized surface plasmon applications. Optical efficiencies are shown to be better indicators of performance as compared to approximations in the quasistatic regime. The near-field intensity efficiency, which is a generalized form of the wellknown scattering efficiency, is a more flexible and useful metric for local-field enhancement applications.We also examine the evolution of the field enhancement from a particle surface to the far-field regime for spherical nanoparticles with varying radii. Titanium nitride and zirconium nitride, which were recently suggested as alternative plasmonic materials in the visible and near-infrared ranges, are compared to the performance of gold. In contrast to the results from quasistatic methods, both nitride materials are very good alternatives to the usual plasmonic materials. © Springer-Verlag 2012.},
   author = {U. Guler and G. V. Naik and A. Boltasseva and V. M. Shalaev and A. V. Kildishev},
   doi = {10.1007/s00340-012-4955-3},
   issn = {09462171},
   issue = {2},
   journal = {Applied Physics B: Lasers and Optics},
   pages = {285-291},
   title = {Performance analysis of nitride alternative plasmonic materials for localized surface plasmon applications},
   volume = {107},
   year = {2012}
}
